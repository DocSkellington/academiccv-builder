{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/DocSkellington/academiccv-builder/blob/main/schema.json",
  "title": "academiccv-builder",
  "description": "Schema for a JSON file containing the academic CV of a researcher",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "description": {
      "description": "A text written in Markdown",
      "type": "string"
    },
    "style": {
      "type": "object"
    },
    "award": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "year": {
          "type": [
            "string",
            "integer"
          ]
        },
        "description": {
          "$ref": "#/definitions/description"
        },
        "style": {
          "$ref": "#/definitions/style"
        }
      }
    },
    "contact": {
      "type": "object",
      "properties": {
        "address": {
          "description": "The postal address",
          "type": "object",
          "required": [
            "street",
            "zipcode",
            "city",
            "country"
          ],
          "properties": {
            "street": {
              "type": "string"
            },
            "zipcode": {
              "type": [
                "string",
                "integer"
              ]
            },
            "city": {
              "type": "string"
            },
            "country": {
              "type": "string"
            },
            "link": {
              "description": "A link to a map",
              "type": "string"
            }
          }
        },
        "email": {
          "type": [
            "string",
            "array"
          ],
          "items": {
            "type": "string"
          }
        },
        "github": {
          "description": "Your GitHub username",
          "type": "string"
        },
        "orcid": {
          "description": "Your ORCID number",
          "type": "string"
        },
        "linkedin": {
          "description": "Your LinkedIn username, as displayed in the URL",
          "type": "string"
        },
        "pdf": {
          "description": "Path to the PDF version of the CV",
          "type": "string"
        },
        "website": {
          "description": "Website URL",
          "type": "string"
        }
      }
    },
    "event": {
      "description": "An event",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "year": {
          "type": [
            "integer",
            "string"
          ]
        },
        "name": {
          "$ref": "#/definitions/description"
        },
        "where": {
          "$ref": "#/definitions/description"
        }
      }
    },
    "job": {
      "description": "A job",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "start": {
          "type": "string"
        },
        "end": {
          "type": "string"
        },
        "title": {
          "$ref": "#/definitions/description"
        },
        "organization": {
          "$ref": "#/definitions/description"
        },
        "description": {
          "$ref": "#/definitions/description"
        },
        "style": {
          "$ref": "#/definitions/style"
        }
      }
    },
    "language": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "level"
      ],
      "properties": {
        "name": {
          "$ref": "#/definitions/description"
        },
        "level": {
          "$ref": "#/definitions/description"
        }
      }
    },
    "project": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "shortName": {
          "$ref": "#/definitions/description"
        },
        "name": {
          "$ref": "#/definitions/description"
        },
        "role": {
          "$ref": "#/definitions/description"
        },
        "description": {
          "$ref": "#/definitions/description"
        },
        "homepage": {
          "description": "Link to the project's repository or homepage",
          "type": "string"
        },
        "artifact": {
          "description": "Link to the project's artifact",
          "type": "string"
        },
        "style": {
          "$ref": "#/definitions/style"
        }
      }
    },
    "publication": {
      "description": "A publication",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string"
        },
        "authors": {
          "type": "string"
        },
        "year": {
          "type": "string"
        },
        "reference": {
          "$ref": "#/definitions/description"
        },
        "where": {
          "description": "The journal/conference name",
          "$ref": "#/definitions/description"
        },
        "shortWhere": {
          "description": "The acronym of the journal/conference",
          "$ref": "#/definitions/description"
        },
        "doi": {
          "type": "string"
        },
        "arxiv": {
          "description": "The arXiv DOI",
          "type": "string"
        },
        "note": {
          "description": "A remark on the paper (for instance, best paper award)",
          "$ref": "#/definitions/description"
        },
        "style": {
          "$ref": "#/definitions/style"
        }
      }
    },
    "supervision": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "when": {
          "$ref": "#/definitions/description"
        },
        "name": {
          "$ref": "#/definitions/description"
        },
        "role": {
          "$ref": "#/definitions/description"
        },
        "organization": {
          "$ref": "#/definitions/description"
        },
        "description": {
          "$ref": "#/definitions/description"
        },
        "style": {
          "$ref": "#/definitions/style"
        }
      }
    },
    "teaching": {
      "description": "A single course",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "when": {
          "$ref": "#/definitions/description"
        },
        "course": {
          "$ref": "#/definitions/description"
        },
        "role": {
          "$ref": "#/definitions/description"
        },
        "level": {
          "$ref": "#/definitions/description"
        },
        "organization": {
          "$ref": "#/definitions/description"
        },
        "description": {
          "$ref": "#/definitions/description"
        },
        "style": {
          "$ref": "#/definitions/style"
        }
      }
    },
    "talk": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "date": {
          "type": "string"
        },
        "title": {
          "$ref": "#/definitions/description"
        },
        "conference": {
          "$ref": "#/definitions/description"
        },
        "where": {
          "$ref": "#/definitions/description"
        },
        "style": {
          "$ref": "#/definitions/style"
        }
      }
    }
  },
  "properties": {
    "$schema": {
      "type": "string"
    },
    "awards": {
      "description": "Your awards",
      "oneOf": [
        {
          "description": "When using subsections",
          "type": "object",
          "required": [
            "order"
          ],
          "properties": {
            "order": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/award"
            }
          }
        },
        {
          "description": "When not using subsections",
          "type": "array",
          "items": {
            "$ref": "#/definitions/award"
          }
        }
      ]
    },
    "contact": {
      "description": "Contact information",
      "oneOf": [
        {
          "description": "When using subsections",
          "type": "object",
          "required": [
            "order"
          ],
          "properties": {
            "order": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": {
            "$ref": "#/definitions/contact"
          }
        },
        {
          "description": "When not using subsections",
          "$ref": "#/definitions/contact"
        }
      ]
    },
    "events": {
      "description": "List of attended events",
      "type": "array",
      "items": {
        "$ref": "#/definitions/event"
      }
    },
    "jobs": {
      "description": "The list of past and current positions",
      "oneOf": [
        {
          "description": "When using subsections",
          "type": "object",
          "required": [
            "order"
          ],
          "properties": {
            "order": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/job"
            }
          }
        },
        {
          "description": "When not using subsections",
          "type": "array",
          "items": {
            "$ref": "#/definitions/job"
          }
        }
      ]
    },
    "languages": {
      "description": "List of known languages",
      "oneOf": [
        {
          "description": "When using subsections",
          "type": "object",
          "required": [
            "order"
          ],
          "properties": {
            "order": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/language"
            }
          }
        },
        {
          "description": "When not using subsections",
          "type": "array",
          "items": {
            "$ref": "#/definitions/language"
          }
        }
      ]
    },
    "logos": {
      "description": "The logos to display",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "personal": {
      "description": "The identification information about you",
      "type": "object",
      "required": [
        "name",
        "position",
        "organization"
      ],
      "properties": {
        "name": {
          "description": "Your name",
          "type": "string"
        },
        "position": {
          "description": "Your current position",
          "type": "string"
        },
        "organization": {
          "description": "The institution you are currently affiliated to",
          "type": "string"
        },
        "photo": {
          "description": "The path to a picture",
          "type": "string"
        }
      }
    },
    "projects": {
      "description": "Your projects",
      "oneOf": [
        {
          "description": "When using subsections",
          "type": "object",
          "required": [
            "order"
          ],
          "properties": {
            "order": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/project"
            }
          }
        },
        {
          "description": "When not using subsections",
          "type": "array",
          "items": {
            "$ref": "#/definitions/project"
          }
        }
      ]
    },
    "publications": {
      "description": "Your publications",
      "oneOf": [
        {
          "description": "When using subsections",
          "type": "object",
          "required": [
            "order"
          ],
          "properties": {
            "order": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/publication"
            }
          }
        },
        {
          "description": "When not using subsections",
          "type": "array",
          "items": {
            "$ref": "#/definitions/publication"
          }
        }
      ]
    },
    "supervision": {
      "description": "The students/projects you supervised",
      "oneOf": [
        {
          "description": "When using subsections",
          "type": "object",
          "required": [
            "order"
          ],
          "properties": {
            "order": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/supervision"
            }
          }
        },
        {
          "description": "When not using subsections",
          "type": "array",
          "items": {
            "$ref": "#/definitions/supervision"
          }
        }
      ]
    },
    "summary": {
      "description": "A short biography, for instance",
      "$ref": "#/definitions/description"
    },
    "teaching": {
      "description": "Your teaching duties",
      "type": "array",
      "oneOf": [
        {
          "description": "When using subsections",
          "type": "object",
          "required": [
            "order"
          ],
          "properties": {
            "order": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/teaching"
            }
          }
        },
        {
          "description": "When not using subsections",
          "type": "array",
          "items": {
            "$ref": "#/definitions/teaching"
          }
        }
      ]
    },
    "talks": {
      "description": "Your talks",
      "type": "array",
      "items": {
        "$ref": "#/definitions/talk"
      }
    }
  }
}